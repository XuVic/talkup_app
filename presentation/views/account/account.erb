<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Account Detail</h1>
      </div>

      <div class="col">
        <div class="bs-component">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Info</th>
              <th scope="col">Desc</th>
            </tr>
          </thead>
          <tbody>
            <tr class="table-primary">
              <th scope="row">User name</th>
              <td>
                <%= @current_account.username %>
              </td>
            </tr>
            <tr>
              <th scope="row">Email</th>
              <td>
                <%= @current_account.email %>
              </td>
            </tr>
            <tr class="table-primary">
              <th scope="row">Identity(test)</th>
              <td>Student</td>
            </tr>
          </tbody>
        </table>
      </div> 
      <div class="page-header">
        <h1>Issues Detail</h1>
      </div> 
      <div class="col">
        <%= render :'./issue/issues', locals:{issues: issues, account_page: true} %>
      </div>
      </div>
      <div class="row" style="padding-top: 5vw; padding-bottom: 5vw;">
        <div class="col-lg-12">
          <div class="bs-component">
            <button type="button" class="btn btn-primary"
                    id="button-accout-check" onclick="history.back()"> BACK </button>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>
