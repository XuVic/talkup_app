<form action='/issue/edit' method='post'>
<div class="row">
<div class="col">
<div class="form-group" >
  <h2>Issue Information <%= section %> </h2>
    <input type="hidden" name='id' value= '<%= issue.id %>' >
    <label for="formGroupExampleInput">Title</label>
    <input type="text" name='title' class="form-control" id="formGroupExampleInput" value=" <%= issue.title %> " >
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Description</label>
    <textarea name="description" class='form-control' id="" cols="30" rows="10" ><%= issue.description %></textarea>
  </div>
  <div class="form-group">
    <label for="dealine">Deadline</label>
     <input type="date" name='deadline' class="form-control" value='<%= issue.deadline%>' >
  </div>
  <div class="form-check">
    <% if issue.anonymous %>
      <input value='1' name='anonymous' type="checkbox" class="form-check-input" id="exampleCheck1" checked>
    <% else %>
      <input value='1' name='anonymous' type="checkbox" class="form-check-input" id="exampleCheck1" >
    <% end %>
    <label class="form-check-label" for="exampleCheck1">Anonymous</label>
  </div>
  <input type="hidden" name='section' value= <%= section %> >
  <div class='form-group'>
    <input type="submit" class='btn btn-primary' value='update'>
  </div>
</div>
<div class="col">

<div class="form-group">
    <h2>collaborators</h2>

      <% collaborators.username.each do |collaborator_username| %>
      <div class="form-check">
          <input name='collaborators[]' class="form-check-input" type="checkbox" value="<%= collaborator_username %>" id="defaultCheck1">
          <label class="form-check-label" for="defaultCheck1">
            <%= collaborator_username %>
          </label>
      </div>
      <% end %>
</div>
</div>

  </div>
</form>